---
interface Props {
  id: string;
  date: string;
  img_src: string;
  proj_link: string;
  title: string;
  roles: string[];
  contributions: string[];
  project_type: string;
  description: string;
  tools: string;
}

const {
  id,
  date,
  img_src,
  proj_link,
  title,
  roles,
  contributions,
  project_type,
  description,
  tools,
} = Astro.props;
---

<div id=`${id}-modal-button` class="highlight-container">
  <div class="flex horizontal proj-info-container">
    <div class="flex column date-img-div">
      <p class="timeframe">{date}</p>

      <a class="img-link" target="_blank">
        <img src={img_src} alt={title} />
      </a>
    </div>

    <div class="flex column proj-info">
      {
        proj_link ? (
          <div class="title-link-div">
            <h2>{title}</h2>

            <a class="proj-redir-icon-link" target="_blank" href={proj_link}>
              <img
                class="proj-redir-icon"
                src="/assets/open-link-icon.svg"
                alt="Project Link"
              />
            </a>
          </div>
        ) : (
          <a>
            <h2>{title}</h2>
          </a>
        )
      }

      <div class="role">
        <p>Role:</p>
        <ul class="list">
          {
            roles.map((role) => {
              return <li class="list-item">{role}</li>;
            })
          }
        </ul>
      </div>

      <p class="proj-type">{project_type}</p>

      <p class="description">{description}</p>
    </div>
  </div>
</div>

<div id={id} class="modal">
  <div class="modal-content">
    <!-- don't include any icons beside the project title for those without links -->
    {
      proj_link == "" && (
        <header class="modal-header">
          <h1 class="modal-header">{title}</h1>
          <button id=`${id}-modal-close` class="modal-close" onclick={`closeModal('${id}')`}>
            &times;
          </button>
        </header>
      )
    }

    <!-- insert github icon linked to project to projects with git repository -->
    {
      proj_link.includes("github") && (
        <header class="modal-header">
          <div class="modal-title-div">
            <h1 class="modal-header">{title}</h1>
            <a target="_blank" href={proj_link}>
              <img
                class="modal-link-icon git-icon"
                src="/assets/github-vector.svg"
                alt="Github Link"
              />
            </a>
          </div>
          <button class="modal-close" onclick={`closeModal('${id}')`}>
            &times;
          </button>
        </header>
      )
    }

    <!-- insert redirect icon linked to project to projects with non-git links -->
    {
      proj_link && !proj_link.includes("github") && (
        <header class="modal-header">
          <div class="modal-title-div">
            <h1 class="modal-header">{title}</h1>
            <a target="_blank" href={proj_link}>
              <img
                class="modal-link-icon redir-icon"
                src="/assets/open-link-icon.svg"
                alt="Project Link"
              />
            </a>
          </div>
          <button class="modal-close" onclick={`closeModal('${id}')`}>
            &times;
          </button>
        </header>
      )
    }

    <div class="modal-img-div">
      {
        img_src === "/assets/proj-discord-icon.png" && (
          <img src={img_src} alt={title} class="modal-proj-icon" />
        )
      }
      {
        img_src === "/assets/proj-machine-learning-icon.png" && (
          <img src={img_src} alt={title} class="modal-proj-icon" />
        )
      }
      {
        img_src !== "/assets/proj-discord-icon.png" &&
          img_src !== "/assets/proj-machine-learning-icon.png" && (
            <img class="modal-proj-img" src={img_src} alt={title} />
          )
      }
    </div>

    <div>
      <p class="description">{description}</p>
      <p class="tools"><b>Tools:</b> {tools}</p>
    </div>

    <div class="list-div">
      <p class="list-label"><b>Role:</b></p>
      <ul class="list">
        {
          roles.map((role) => {
            return <li class="list-item">{role}</li>;
          })
        }
      </ul>
    </div>

    <div class="list-div">
      <p class="list-label"><b>Contributions:</b></p>
      <ul class="list">
        {
          contributions.map((contribution) => {
            return <li class="list-item">{contribution}</li>;
          })
        }
      </ul>
    </div>
  </div>
</div>

<!-- <script type="text/javascript" src="../src/js/modal.js"></script> -->

<script define:vars={{ id }}>
  console.log(id);
  function openModal(id) {
    document.getElementById(id).style.display = "block";
  }

  function closeModal(id) {
    document.getElementById(id).style.display = "none";
  }

  window.onclick = function (event) {
    var modals = document.getElementsByClassName("modal");
    for (var i = 0; i < modals.length; i++) {
      if (event.target == modals[i]) {
        modals[i].style.display = "none";
      }
    }
  };

  document
    .getElementById(`${id}-modal-button`)
    .addEventListener("click", () => openModal(id));

  document
    .getElementById(`${id}-modal-close`)
    .addEventListener("click", () => closeModal(id))
  
</script>

<style>
  h2 {
    font-weight: 800;
  }

  a {
    text-decoration: none;
    color: #000000;
  }

  div {
    overflow: auto;
  }

  .horizontal {
    flex-direction: row;
  }

  .column {
    flex-direction: column;
  }

  .flex {
    display: flex;
  }

  .title-link-div {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 1%;
  }

  .proj-redir-icon-link {
    display: flex;
    align-items: center;
    padding: 5px;
    border-radius: 5px;
    .proj-redir-icon {
      width: auto;
      height: 20px;
    }
  }

  .proj-redir-icon-link:hover {
    background-color: #dcdcdc;
  }

  .highlight-container {
    display: flex;
    width: 90vw;
    flex-direction: row;
    justify-content: center;
    border-radius: 20px;
    margin: 0 20px;
    padding: 0;
  }

  .highlight-container:hover {
    background-color: #f2f2f2;
    cursor: pointer;
  }

  .date-img-div {
    gap: 22px;
  }

  .highlight-container img {
    width: 100%;
    margin: auto;
  }

  .timeframe {
    font-weight: 700;
    font-size: 20px;
    margin-bottom: 20px;
  }

  .proj-info-container {
    gap: 5%;
    align-items: center;
    /* width: 90vw; */
    padding: 2%;
    box-sizing: border-box;
  }

  .proj-info {
    width: 100%;
    gap: 20px;
    text-wrap: wrap;

    p {
      font-size: 15px;
    }

    h2 {
      font-size: 22px;
    }
  }

  .list-item {
    margin-left: 30px;
  }

  .proj-type {
    font-style: italic;
  }

  .description {
    font-weight: 600;
  }

  .modal {
    position: fixed;
    z-index: 1;
    width: 100%;
    height: 100%;
    overflow: auto;
    top: 10%;
    background-color: rgba(0, 0, 0, 0.4);
    display: none;

    button {
      border: none;
      background-color: #ffffff;
      border-radius: 20px;
    }

    button:hover {
      background-color: #f2f2f2;
      cursor: pointer;
    }

    button:active {
      background-color: #f2f2f2;
    }
    p {
      margin-top: 20px;
    }

    a {
      display: flex;
      align-items: center;
      padding: 5px;
      border-radius: 10px;
    }

    a:hover {
      background-color: #dcdcdc;
    }
    .redir-icon {
      width: auto;
      height: 25px;
    }

    .git-icon {
      width: auto;
      height: 30px;
    }

    .modal-content {
      padding: 2% 5%;
      display: block;
      margin: 2% auto;
      width: 70vw;
      height: 75vh;
      background-color: #ffffff;
      overflow: auto;
      border-radius: 20px;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 800;
      font-size: 30px;
    }

    .modal-title-div {
      display: flex;
      align-items: center;
      justify-content: center;
      font-display: row;
      gap: 20px;
    }

    .modal-close {
      color: #000000;
      padding: 15px;
      float: right;
      font-size: 28px;
      font-weight: bold;
      border-radius: 5px;
    }

    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    .modal-img-div {
      width: 70%;
      margin: 0 auto;
    }

    .modal-proj-icon {
      display: block;
      width: 40%;
      height: auto;
      margin: 5% auto;
    }

    .modal-proj-img {
      display: block;
      width: 80%;
      height: auto;
      margin: 5% auto;
    }
  }

  @media screen and (max-width: 1200px) {
    .modal-header {
      font-weight: 800;
      font-size: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    h2 {
      font-weight: 800;
    }

    a {
      text-decoration: none;
      color: #000000;
    }

    .horizontal {
      flex-direction: column;
    }

    .column {
      flex-direction: column;
    }

    .flex {
      display: flex;
    }

    .highlight-container {
      display: flex;
      flex-direction: column;
      /* margin: 10px 48px;
            padding: 45px 35px; */
      margin: 0;
      padding: 0;
      gap: 20px;
    }

    .date-img-div {
      gap: 15px;
      margin: 0 auto 10px;
      justify-content: center;
      align-items: center;
    }

    .img-link {
      display: flex;
      align-items: center;
    }

    .highlight-container img {
      width: 90%;
      margin: 0 auto;
    }

    .timeframe {
      font-weight: 700;
      font-size: 18px;
      width: 90%;
      text-align: left;
    }

    .proj-info-container {
      gap: 5%;
      align-self: center;
      justify-self: center;
      margin: 10px 0;
      width: 95%;
      border-radius: 20px;
      box-shadow: 1px 2px 4px rgba(0, 0, 0, 0.35);
      padding: 10px 0;
    }

    .proj-info {
      margin: 0;
      width: 90%;
      gap: 24px;

      p {
        font-size: 15px;
      }

      h2 {
        font-size: 20px;
      }
    }

    .proj-type {
      font-style: italic;
    }

    .description {
      font-weight: 600;
    }

    .modal {
      .modal-content {
        width: 85%;
        padding: 5%;
      }

      .modal-header {
        font-size: 20px;
      }

      .modal-proj-icon {
        display: block;
        width: 80vw;
        height: auto;
        margin: 5% auto;
      }

      .modal-proj-img {
        display: block;
        width: 100%;
        height: auto;
        margin: 5% auto;
      }
    }
  }
</style>
